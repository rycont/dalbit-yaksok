    "@hono/hono": "jsr:@hono/hono@^4.10.2",
    "@hono/mcp": "jsr:@hono/mcp@^0.1.4",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.20.2",
    "zod": "npm:zod@3.24.1"
