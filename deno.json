{
    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.8",
        "assert": "jsr:@std/assert@^1.0.7"
    },
    "tasks": {
        "test-cases": "deno test --quiet --allow-net --allow-read --parallel && deno lint"
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ],
            "include": [],
            "tags": [
                "recommended"
            ]
        }
    },
    "nodeModulesDir": "auto",
    "workspace": [
        "quickjs",
        "docs",
        "core"
    ],
    "publish": {
        "include": [
            "./src"
        ]
    }
}