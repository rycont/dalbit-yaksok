{
    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.8",
        "assert": "jsr:@std/assert@^1.0.7"
    },
    "lint": {
        "rules": {
            "exclude": ["no-explicit-any"],
            "include": [],
            "tags": ["recommended"]
        }
    },
    "nodeModulesDir": "auto",
    "workspace": [
        "docs",
        "core",
        "test",
        "monaco-language-provider",
        "exts/quickjs",
        "exts/pyodide",
        "exts/data-analyze",
        "exts/math",
        "exts/statistics",
        "exts/standard"
    ],
    "version": "4.5.0",
    "tasks": {
        "apply-version": "deno run --allow-read --allow-write scripts/apply-version.ts",
        "publish": "deno task apply-version && deno task --recursive test && deno publish --allow-dirty",
        "nested-test": "deno task --recursive test && deno publish --dry-run --allow-dirty",
        "test:pyodide": "deno test exts/pyodide/ --allow-net --allow-read --allow-write --parallel"
    },
    "deploy": {
        "org": "rycont",
        "app": "dalbit-yaksok"
    }
}
