{
    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.8",
        "assert": "jsr:@std/assert@^1.0.7"
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ],
            "include": [],
            "tags": [
                "recommended"
            ]
        }
    },
    "nodeModulesDir": "auto",
    "workspace": [
        "quickjs",
        "docs",
        "core",
        "test"
    ],
    "version": "0.2.0-alpha.10+20241217.nightly",
    "tasks": {
        "apply-version": "deno run --allow-read --allow-write apply-version.ts",
        "publish": "deno task apply-version && deno task --recursive test && deno publish --allow-dirty",
        "test": "deno task apply-version && deno task --recursive test"
    }
}